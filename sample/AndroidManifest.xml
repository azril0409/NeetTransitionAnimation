        </activity>
        <activity
            android:name=".ActivityToActivity"
            android:label="ActivityToActivity" >
        </activity>
        <activity
            android:name=".ActivityToActivity2"
            android:label="ActivityToActivity2" >
        </activity>
        <activity
            android:name=".ActivityToActivity3"
            android:label="ActivityToActivity3" >
        </activity>        
        <activity
            android:name=".FragmentToActivity"
            android:label="FragmentToActivity" >
